<div class="box">
  <%= render "search" %>
  <div class="box-header with-border">
    <h3 class="box-title"><%= t ".title" %></h3>
  </div>
  <div class="title--pad-l10-t10">
    <%= link_to new_admin_category_path, class: "btn btn-sm btn-success" do %>
      <i class="fa fa-plus"></i> <%= t ".new" %>
    <% end %>
    <div id="example1_length" class="pull-right title--pad-r10">
      <label>
        <%= select_tag :per_page,
          options_for_select(Settings.per_pages.as_json.map{|key, value| [value, value]}, @per_page),
          class: "form-control input-sm", data: {remote: true, url: admin_categories_path} %>
      </label>
    </div>
  </div>
  <div id="not-exist-categories-search" class="title--pad-l10-t10"></div>
  <div id="list-categories">
    <%= render "table_category" %>
  </div>
</div>
